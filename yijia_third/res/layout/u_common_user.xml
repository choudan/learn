<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/info" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/questionnaire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/questionnaire" />

        <TextView
            android:id="@+id/questionnaire_num"
            style="@style/msgnum_style"
            android:layout_gravity="top|right"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:visibility="invisible" />
    </FrameLayout>

    <ListView
        android:id="@+id/list_questionnaire"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >
    </ListView>

    <Button
        android:id="@+id/communication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/communication" />

    <Button
        android:id="@+id/waveform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/waveform" />

    <Button
        android:id="@+id/dev_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dev_info" >
    </Button>

   <!--  <include
        android:id="@+id/dev_info_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/a_query_user_dev_info_detail" /> -->
        
     <LinearLayout
        android:id="@+id/dev_info_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" > 

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/activate_time" />

            <TextView
                android:id="@+id/activate_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/service_deadline" />

            <TextView
                android:id="@+id/service_deadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/avg_time" />

            <TextView
                android:id="@+id/avg_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/upload_record" />

            <ListView
                android:id="@+id/upload_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/oeder_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/oeder_check" >
        </Button>

        <TextView
            android:id="@+id/oeder_check_num"
            style="@style/msgnum_style"
            android:layout_gravity="top|right"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:visibility="invisible" />
    </FrameLayout>

    <Button
        android:id="@+id/direction_for_use"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/direction_for_use" >
    </Button>

</LinearLayout>