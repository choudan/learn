<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >
    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingTop="10dp"
        android:background="#1293a5"
        android:gravity="center_vertical"
        >

       <!--  <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back"
            android:background="#1293a5"
            android:onClick="chat_back"
            android:textColor="#1293a5" /> -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:layout_centerInParent="true"
            android:text="上传照片"
            android:textColor="#ffffff"
            android:textSize="20sp" />
	</RelativeLayout>

    <EditText
        android:id="@+id/edit_content1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rl_layout"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:textSize="10sp" 
        android:paddingLeft="5dp"
        android:layout_marginRight="5dp" 
        android:layout_marginLeft="5dp" 
        android:background="@drawable/inputbox"
        android:hint="此刻，你想说的话"/>
   
    <GridView
        android:id="@+id/gridView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/upload"
        android:layout_below="@id/edit_content1"
        android:layout_marginTop="10dp"
        android:columnWidth="70dp"
        android:horizontalSpacing="10dp"
        android:listSelector="@color/bule_overlay"
        android:numColumns="3"
        android:padding="20dp"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp" 
        android:layout_marginBottom="10dp"
        >

    </GridView>
    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_above="@+id/upload"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp" 
        android:visibility="gone"             
        />
    <Button
        android:id="@+id/upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/upload_btn"
        android:onClick="upload"
        android:text="开始上传"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</RelativeLayout>