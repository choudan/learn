<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Code"
    android:background="#cfcfcf" >

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingTop="10dp"
        android:background="#1293a5"
        android:gravity="center_vertical" >

         <!-- <ImageButton
          android:id="@+id/btn_back"
          android:layout_width="50dp"
          android:layout_height="45dp"
          android:layout_centerVertical="true"
          android:layout_marginLeft="15dp"
          android:src="@drawable/back"
          android:background="#1293a5"
		   /> -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/username"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rl_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="你好！"
        android:textColor="#636363"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/rl_layout"
        android:layout_marginTop="40dp"
        android:text="欢迎进入颐佳经络仪"
        android:textColor="#636363"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"        
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:gravity="center_vertical"
            >

            <RelativeLayout
                android:id="@+id/RelativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#cfcfcf"
                android:layout_weight="0.5"
                android:layout_marginTop="15dp"
                >
                <ImageButton
                    android:id="@+id/user_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_centerHorizontal="true"                   
                    android:background="#cfcfcf"
                    android:src="@drawable/userinformation"
                    android:textColor="#ffffff" />

 				<TextView
 				    android:id="@+id/userinformation"
 				    android:layout_width="wrap_content"
 				    android:layout_height="wrap_content"
 				    android:layout_below="@+id/user_info"
 				    android:layout_centerHorizontal="true"
 				    android:layout_marginTop="15dp"
 				    android:background="#cfcfcf"
 				    android:text="用户信息"
 				    android:textColor="#000000"
 				    android:textSize="15dp" />
            </RelativeLayout>
			<TextView
				android:id="@+id/line4"
				android:layout_width="0.5dp"
				android:layout_height="match_parent"
				android:textColor="#00000f"
				android:background="@drawable/line"
				android:layout_marginTop="10dp"
				/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="#cfcfcf" 
                android:layout_marginTop="15dp"
                >

                <ImageButton
                    android:id="@+id/doc_rep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#cfcfcf"
                    android:layout_marginRight="20dp"                   
                    android:layout_centerHorizontal="true"                  
                    android:src="@drawable/docreply"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/docreply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/doc_rep"
 				    android:layout_centerHorizontal="true"
                    android:background="#cfcfcf"
                    android:text="医生反馈"
                    android:textColor="#00000f"
                    android:textSize="15dp" />            
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_weight="3"
            >            
            	<ImageView
                    android:id="@+id/line2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="10dp"
                     />
            	<Space 
            	    android:layout_width="30dp"
                    android:layout_height="match_parent"
            	    />
 				<ImageView
                    android:id="@+id/line1"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line"
                    android:layout_weight="0.5"
                    android:layout_marginRight="10dp"
                     />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" 
            android:layout_gravity="center_vertical"
            android:background="#cfcfcf"
            android:layout_weight="2"
            android:id="@+id/linearLayout2">
 			<RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_marginTop="15dp"	            
	            android:layout_weight="0.5"	 
	            android:id="@+id/ll"           
	            >
            	
                <ImageButton
                    android:id="@+id/wave_form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
 				    android:layout_centerHorizontal="true"
                    android:background="#cfcfcf"
                    android:src="@drawable/waveform"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/waveform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
 				    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/wave_form"
                    android:background="#cfcfcf"                  
                    android:text="波形图"
                    android:textColor="#000000"
                    android:textSize="15dp" />
        
        	</RelativeLayout>
           	<TextView
				android:id="@+id/line3"
				android:layout_width="0.5dp"
				android:layout_height="match_parent"
				android:textColor="#00000f"
				android:background="@drawable/line"
				android:layout_marginBottom="10dp"
				/>
        	<RelativeLayout 
        	    android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:layout_marginTop="15dp"
	            android:layout_weight="0.5"	            	            
	            >
        	    
                <ImageButton
                    android:id="@+id/user_instructions"
				    android:layout_marginRight="20dp"			    
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
 				    android:layout_centerHorizontal="true"
                    android:background="#cfcfcf"
                    android:src="@drawable/instructions"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/instructions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
 				    android:layout_centerHorizontal="true"
 				    android:layout_below="@+id/user_instructions"				    
                    android:layout_marginTop="15dp"
                    android:background="#cfcfcf"
                    android:text="说明书"
                    android:textColor="#000000"
                    android:textSize="15dp" />
        	    
        	</RelativeLayout>
        </LinearLayout>          
   </LinearLayout>
</RelativeLayout>